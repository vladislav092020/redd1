

   <!-- Why us -->
   <section class="why-us _wrapper">

      <!-- Header block -->
      <div class="why-us__header-block">
         <h2 class="why-us__header">Why <b>us</b></h2>
      </div>

      <!-- Cards list -->
      <div class="why-us__items">
         <div class="why-us__container">
            <div class="why-us__content">
            {% for block in section.blocks %}
               <div class="why-us__item item">
                  <img src="{{ block.settings.image |img_url : "master" }}" class="item__img item__img_one">
                  <h3 class="item__header item__header_one">{{ block.settings.title }}</h3>
                  <img src="./redaily_files/border.png" alt="" class="item__border">
                  <p class="item__text">{{ block.settings.text }}</p>
               </div>
            {% endfor %}
              
            </div>
         </div>
      </div>

   </section>


    {% schema %}
{
  "name": "WHY",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "CONTACTS"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Custom Section Description"
    },
   
    {
      "type": "text",
      "id": "text",
      "label": "Button Text",
      "default": "SUBMIT"
    }
  
  ],
  "blocks" : [
    {
        "type" : "text",
        "name" : "Text",
        "settings" : [{
        "type" : "image_picker",
        "id" : "image",
        "label" : "Image"
        },  
        {
        "type" : "text",
            "id" : "title",
            "label" : "Title"
        },
        {
            "type" : "text",
            "id" : "text",
            "label" : "Text"
        }]
    }
    ],
  "presets": [
    {
      "name": "WHY"
     
    }
  ]
}
{% endschema %}