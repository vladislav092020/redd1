<!-- footer -->
   <footer class="footer _wrapper">
      <div class="footer__container _container">

         <!-- footer top -->
         <div class="footer__top">
            <div class="footer__logo-block">
               <img src="{{ settings.logo |img_url : "master" }}" alt="redaily" class="footer__logo">
            </div>

            <div class="footer__nav">
               <ul class="nav__list">
                  {%  for link in section.settings.menu.links %}
                  <li class="nav__item"><a href="{{ link.url }}" class="nav__link">{{ link.title }}</a></li>
                    {%  endfor %}
                  
                  <li class="nav__item nav__item_mobile"><a href="/" class="nav__link">Terms of Use</a></li>
                  <li class="nav__item nav__item_mobile"><a href="/" class="nav__link">Privacy Policy</a></li>
               </ul>
            </div>

         </div>

         <!-- footer bottom -->
         <div class="footer__bottom">
            <ul class="footer__info info">
               <li class="info__item"><a href="/" class="info__link">@ copyright redaily 2022. All rights reserved</a>
               </li>
               <li class="info__item info__item_mobile"><a href="/" class="info__link">Terms of Use</a></li>
               <li class="info__item info__item_mobile"><a href="/" class="info__link">Privacy Policy</a></li>
            </ul>
            <div class="footer__social-block">
              {%- if settings.social_twitter_link != blank -%}
               <a href="{{ settings.social_twitter_link }}" class="footer__link">
                 {% render "icon-twitter" %}
               </a>
                {%- endif -%}
             {%- if settings.social_facebook_link != blank -%}
               <a href="{{ settings.social_facebook_link }}" class="footer__link">
                 {% render "icon-facebook" %}
               </a>
                {%- endif -%}
               {%- if settings.social_instagram_link != blank -%}
               <a href="{{ settings.social_instagram_link }}" class="footer__link">
                 {% render "icon-instagram" %}
               </a>
                 {%  endif %}
            </div>
         </div>
      </div>
   </footer>

