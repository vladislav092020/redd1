

   <!-- Product reviews -->
   <section class="reviews _wrapper">
      <div class="reviews__container _container">
         <h2 class="reviews__header">Product <b>reviews</b></h2>

         <div class="swiper reviews__slider">
            <div class="swiper-wrapper" >
            {% for block in section.blocks %}
               <div class="swiper-slide">
                  <div class="reviews__item">
                    {%  render "icon-quote" %}
                     <p class="reviews__text">{{ block.settings.text }}</p>
                     <div class="reviews__author-block">
                        <p class="reviews__firstname">{{ block.settings.first_name }}</p>
                        <p class="reviews__secondname">{{ block.settings.last_name }}</p>
                     </div>
                  </div>
               </div>
              {% endfor %}
            </div>

         <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span></div>

         <!-- Reviews slider buttons block -->
         <div class="reviews__buttons-block">
            <div class="reviews__button-prev swiper-button-disabled">
               <img src="prev.svg" alt="prev" class="previews__arr">
            </div>
            <div class="reviews__button-next">
               <img src="next.svg" alt="next" class="previews__arr">
            </div>
         </div>

   </div></section>

   {% schema %}
{
  "name": "REVIEWS",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "CONTACTS"
    },
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Custom Section Description"
    },
   
    {
      "type": "text",
      "id": "text",
      "label": "Button Text",
      "default": "SUBMIT"
    }
  
  ],
  "blocks" : [{
    "type" :"Text",
    "name" : "Review",
    "settings"  : [{
        "type" : "text",
        "id" : "text",
        "label" : "Text"
    },
    {
        "type" : "text",
        "id" : "first_name",
        "label" : "First Name"
    },
    {
        "type" : "text",
        "id" : "last_name",
        "label" : "Last Name"
    }]
  }],
  "presets": [
    {
      "name": "REVIEWS"
     
    }
  ]
}
{% endschema %}